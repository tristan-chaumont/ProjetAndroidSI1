<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjouterItem">

    <TextView
        android:id="@+id/titre_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="AJOUT"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center"/>

    <Spinner
        android:id="@+id/choixTag_add"
        android:layout_below="@+id/titre_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        />

    <EditText
        android:id="@+id/nom_add"
        android:layout_below="@+id/choixTag_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:inputType="textPersonName"
        android:hint="Nom de la tÃ¢che"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/choixDate_add"
        android:layout_below="@+id/nom_add">

        <EditText
            android:id="@+id/datepicker_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            android:hint="DATE"/>

        <EditText
            android:id="@+id/timepicker_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            android:hint="HEURE"/>

    </LinearLayout>

    <Button
        android:id="@+id/valider_add"
        android:layout_below="@+id/choixDate_add"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"/>

</RelativeLayout>